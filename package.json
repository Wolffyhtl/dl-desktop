{
  "name": "dl-desktop",
  "appId": "ro.go.hmlendea.DL-Desktop",
  "productName": "DL: language lessons",
  "version": "4.0.0",
  "description": "An unofficial desktop client for Duolingo",
  "main": "scripts/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --publish never"
  },
  "build": {
    "linux": {
      "target": [
        "zip"
      ],
      "category": "Education",
      "artifactName": "${name}_${version}_linux.${ext}"
    },
    "extraFiles": [
      "ro.go.hmlendea.DL-Desktop.desktop"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hmlendea/dl-desktop.git"
  },
  "keywords": [
    "Electron",
    "Duolingo"
  ],
  "author": "Hora»õiu Mlendea <Horatiu.Mlendea@ProtonMail.com>",
  "license": "GPL-3.0",
  "devDependencies": {
    "electron": "^25.9.7",
    "electron-builder": "^24.9.1"
  }
}
