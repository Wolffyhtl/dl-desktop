{
  "name": "duolingo-desktop",
  "appId": "com.electron.${name}",
  "productName": "Duolingo",
  "version": "2.0.9",
  "description": "A desktop client for Duolingo",
  "main": "scripts/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --publish never"
  },
  "build": {
    "linux": {
      "target": [
        "zip",
        "AppImage",
        "deb",
        "apk",
        "snap"
      ],
      "category": "Education",
      "artifactName": "${name}_${version}_linux.${ext}"
    },
    "snap": {
      "plugs": [
        "default",
        "audio-record"
      ]
    },
    "extraFiles": [
      "com.github.hmlendea.duolingo-desktop.desktop"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hmlendea/duolingo-desktop.git"
  },
  "keywords": [
    "Electron",
    "Duolingo"
  ],
  "author": "Hora»õiu Mlendea <Horatiu.Mlendea@ProtonMail.com>",
  "license": "GPL-3.0",
  "devDependencies": {
    "electron": "^13.6.1",
    "electron-builder": "^22.9.1"
  }
}
